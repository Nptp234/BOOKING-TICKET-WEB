
@{
    ViewBag.Title = "HDDetail";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminMasterLayout.cshtml";
}

<link href="~/Areas/AdminArea/Content/customermanager_style.css" rel="stylesheet" />


<nav class="header_nav" style="margin-bottom: 30px; flex-direction: column;">
    <a href="@Url.Action("ReportHD", "Admin")" style="margin-bottom: 50px;">Back to report</a>
    <a class="top_content">DETAIL BILL</a>
</nav>

<div class="container">

    <p class="smaller_content">Chi tiết hóa đơn</p>
    <form>

        @if (ViewBag.GetCTHD != null)
        {
            foreach (var a in ViewBag.GetCTHD)
            {
                <div class="border-bottom" style="margin-bottom: 30px;">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">Mã vé: </span>
                        </div>
                        <input type="number" class="form-control" name="MaVe" value="@a[0]" readonly required>
                    </div>


                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">Số lượng vé: </span>
                        </div>
                        <input type="number" class="form-control" name="SoLuongVP" value="@a[2]" readonly required>
                    </div>


                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">Thành tiền vé: </span>
                        </div>
                        <input type="number" class="form-control" name="ThanhTienVP" value="@a[3]" readonly required>
                    </div>
                </div>

            }
        }

    </form>

    <p class="smaller_content">Chi tiết vé</p>
    <form>

        @if (ViewBag.GetCTVP != null && ViewBag.GetTenGhe != null)
        {
            foreach (var a in ViewBag.GetCTVP)
            {
                <div class="border-bottom" style="margin-bottom: 30px;">
                    
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">Ngày đặt: </span>
                        </div>
                        <input type="text" class="form-control" name="NgayDat" value="@a[0]" readonly required>
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">Gía vé: </span>
                        </div>
                        <input type="number" class="form-control" name="GiaVe" value="@a[1]" readonly required>
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">Ngày lịch chiếu: </span>
                        </div>
                        <input type="text" class="form-control" name="MaLC" value="@a[2]" readonly required>
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">Tên phim: </span>
                        </div>
                        <input type="text" class="form-control" name="MaLC" value="@a[3]" readonly required>
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">Tên ghế: </span>
                        </div>
                        @foreach (var an in ViewBag.GetTenGhe)
                        {
                            if (an[1] == a[4])
                            {
                                <input type="text" class="form-control" name="MaLC" value="@an[0]" readonly required>
                            }
                        }

                    </div>

                </div>

            }
        }

    </form>
</div>


