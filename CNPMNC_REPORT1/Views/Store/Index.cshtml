
@{
    ViewBag.Title = "Index";
    Layout = null;

    //Get Date
    string dateString1 = ViewBag.GetDSVP[0][3];
    string dateString2 = ViewBag.GetDSVP[0][4];
    string result1 = "";
    string result2 = "";
    if (dateString1.Length != 0 && dateString2.Length != 0)
    {
        DateTime dateTime = DateTime.Parse(dateString1);
        DateTime dateTime2 = DateTime.Parse(dateString2);

        // Chuyển đổi thành ngày chỉ (bỏ qua phần giờ, phút, giây)
        DateTime dateOnly = dateTime.Date;
        DateTime dateOnly2 = dateTime2.Date;

        // Định dạng lại thành chuỗi
        result1 = dateOnly.ToString("dd/MM/yyyy");
        result2 = dateOnly2.ToString("dd/MM/yyyy");
    }
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js">
