<div class="card">
    <div class="row">
        <div class="col-md-8 cart">
            <div class="title">
                <div class="row">
                    <div class="col"><h4><b>Movie Ticket</b></h4></div>
                    <div class="col align-self-center text-right text-muted">@ViewBag.GetCountVP[0][0] tickets</div>
                </div>
            </div>

            <form action="@Url.Action("Index","Store")" method="post">
                @if (ViewBag.GetDSVP != null)
                {
                    foreach (var a in ViewBag.GetDSVP)
                    {
                        <div class="row border-bottom" style="padding-bottom: 3px;">
                            <input name="MaVe" value="@a[5]" style="display: none;" />
                            <div class="row main align-items-center">
                                <div class="col-2"><img class="img-fluid" src="~/img_phim/@a[1]"></div>
                                <div class="col" style="margin-right: 15px;">
                                    <div class="row text-muted">Film Name</div>
                                    <div class="row">@a[0]</div>
                                </div>

                                <div class="col">
                                    <div class="row text-muted">Date Book</div>
                                    <div class="row">@result2</div>
                                </div>

                                <div class="col">
                                    <div class="row text-muted">Date Show</div>
                                    <div class="row">@result1</div>
                                </div>

                                <button class="close" style="cursor: pointer; padding: 3px;" name="status" value="Delete">&#10005;</button>
                            </div>

                            <div class="col"><span style="float: right;">@a[2] VND</span></div>
                        </div>
                    }
                }
            </form>


            <div class="back-to-shop"><a href="@Url.Action("Index","Home")">&leftarrow; Back to shop</a></div>
        </div>


        <div class="col-md-4 summary">
            <div><h5><b>Summary</b></h5></div>
            <hr>
            <div class="row">
                <div class="col" style="padding-left:0;">ITEMS 3</div>
                <div class="col text-right">&euro; 132.00</div>
            </div>
            <form>
                <p>SHIPPING</p>
                <select><option class="text-muted">Standard-Delivery- &euro;5.00</option></select>
                <p>GIVE CODE</p>
                <input id="code" placeholder="Enter your code">
            </form>
            <div class="row" style="border-top: 1px solid rgba(0,0,0,.1); padding: 2vh 0;">
                <div class="col">TOTAL PRICE</div>
                <div class="col text-right">&euro; 137.00</div>
            </div>
            <button class="btn">CHECKOUT</button>
        </div>
    </div>

</div>

