<body>

    <!-------Banner Start------->
    <section class="banner" data-scroll-index='0' style="height: fit-content; display: flex; justify-content: center; align-items: center; flex-direction: column; color: white; background-color: #331D2C;">
        <img src="/images/banner.png" alt="" style="width: 100%; height: 100%; object-fit: contain;">


    </section>
    <!-------Banner End------->
    <!-------About End------->

    <section class="about section-padding prelative"
             data-scroll-index='1'
             style="background-color: #331D2C;">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="sectioner-header text-center" style="color: wheat;">
                        <h3>NOW SHOWING</h3>
                    </div>
                    <div class="gtco-section" style="height: 500px; overflow: scroll; padding: 15px;">
                        <div class="gtco-container">
                            <div class="row">
                                @foreach (var item in ViewBag.NowShowing)
                                {
                                    <div class="col-lg-4 col-md-4 col-sm-6 cardfilm" style="margin-bottom: 25px;">
                                        <a href="@Url.Action("FilmDetail", "Home", new { IDPhim = item[0]})" class="fh5co-card-item image-popup">
                                            <figure>
                                                <img src="~/img_phim/@item[7]" alt="Image" class="img-responsive">
                                            </figure>
                                            <div class="fh5co-text">
                                                <h2>@item[1]</h2>
                                                <p>@item[2]</p>
                                            </div>
                                            <div class="fh5co-text" style="width: fit-content; background-color: #2C3333; padding: 10px 10px; color: white; ">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart-fill" viewBox="0 0 16 16">
                                                    <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z" />
                                                </svg>
                                                <span style=" font-size: 18px; margin-left: 10px"> @CNPMNC_REPORT1.Models.ConvertNumber.ConvertNumberToAbbreviation(item[6]) lượt thích</span>
                                            </div>
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div style="display: flex; justify-content: center; width: 100%">
                    <a class="button_booking"
                       style="border: 2px white solid; padding: 10px 20px; margin-top: 20px; cursor: pointer; box-sizing: border-box; color: white">
                        XEM THÊM
                    </a>
                </div>
            </div>

        </div>
    </section>
    <!-------About End------->
    <!-------Video Start------->
    <section class="video-section prelative text-center white">
        <div class="section-padding video-overlay">
            <div class="container">
                <h3>Hottest Movies</h3>
                <i class="fa fa-play" id="video-icon" aria-hidden="true"></i>
                <div class="video-popup">
                    <div class="video-src">
                        <div class="iframe-src">
                            <iframe src="https://www.youtube.com/embed/oHY7D7K58BM?si=hH2vdK4NsOhZ-7Ob" allowfullscreen></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-------Video End------->
    <!-- COMING SOON START -->

    <section class="feature section-padding prelative"
