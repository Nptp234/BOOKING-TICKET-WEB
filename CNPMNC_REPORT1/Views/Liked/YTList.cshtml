@using CNPMNC_REPORT1.Models.User;
@model List<YeuThich>

@if (Model != null && Model.Count > 0)
{
    foreach (var item in Model)
    {
        <div class="product">
            <img src="~/img_phim/@item.ThongTinPhim.HinhAnh" alt="Image">
            <div id="div3">

                <h2 style="font-weight: 700; font-size: 25px;">@item.ThongTinPhim.TenPhim</h2>

                <div class="div_ttp">
                    <h2>Ngày công chiếu: </h2>
                    <h2>@item.ThongTinPhim.NgayCongChieu</h2>
                </div>

                <div class="div_ttp">
                    <h2>Thời lượng phim: </h2>
                    <h2>@item.ThongTinPhim.ThoiLuongP Phút</h2>
                </div>

                <div class="div_ttp">
                    <h2>Giá: </h2>
                    <h2>@item.ThongTinPhim.GiaPhim VNĐ</h2>
                </div>

                <div id="buttons">
                    <a href="@Url.Action("RemoveFilmLiked", "Liked", new { MaPhim = item.ThongTinPhim.MaPhim })" class="button" style="text-decoration: none;">
                        <button class="button_delete">
                            <svg viewBox="0 0 448 512" class="svgIcon">
                                <path d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z"></path>
                            </svg>
                        </button>
                    </a>
                    <a href="@Url.Action("FilmDetail", "Home", new { MaPhim = item.ThongTinPhim.MaPhim })" class="button" style="text-decoration: none;">
                        <button class="button_booking">
                            <svg xmlns="http://www.w3.org/2000/svg" class="svgIcon" viewBox="0 0 16 16">
                                <path d="M0 4.5A1.5 1.5 0 0 1 1.5 3h13A1.5 1.5 0 0 1 16 4.5V6a.5.5 0 0 1-.5.5 1.5 1.5 0 0 0 0 3 .5.5 0 0 1 .5.5v1.5a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 11.5V10a.5.5 0 0 1 .5-.5 1.5 1.5 0 1 0 0-3A.5.5 0 0 1 0 6zm4-1v1h1v-1zm1 3v-1H4v1zm7 0v-1h-1v1zm-1-2h1v-1h-1zm-6 3H4v1h1zm7 1v-1h-1v1zm-7 1H4v1h1zm7 1v-1h-1v1zm-8 1v1h1v-1zm7 1h1v-1h-1z" />
                            </svg>
                        </button>
                    </a>
                </div>
            </div>
        </div>
    }
}
