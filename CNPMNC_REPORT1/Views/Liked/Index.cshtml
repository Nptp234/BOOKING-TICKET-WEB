
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #div1 {
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    #div2 {
        width: 70%;
        height: auto;
    }

    #div3 {
        width: 100%;
        height: 250px;
    }

    #title {
        font-size: 30px;
        text-align: center;
        padding: 15px;
    }

    .product {
        border: 1px solid #ccc;
        padding: 10px;
        margin-bottom: 10px;
        width: 100%;
        display: flex;
        flex-direction: row;
        align-items: center;
    }

        .product img {
            max-width: 200px;
            max-height: 250px;
            margin-right: 20px;
        }

        .product h2 {
            font-size: 20px;
            margin-top: 0;
            margin-bottom: 10px;
        }

    .div_ttp {
        display: flex;
        align-items: center;
    }

        .div_ttp h2 {
            margin: 0;
            padding: 5px;
        }

    #buttons {
        display: flex;
        flex-direction: row;
        width: fit-content;
        justify-content: right;
        float: right;
        margin-bottom: 5px;
    }

    .button {
        display: inline-block;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        text-decoration: none;
    }

    .button_delete {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background-color: rgb(255, 69, 69);
        border: none;
        font-weight: 600;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.164);
        cursor: pointer;
        transition-duration: .3s;
        overflow: hidden;
        position: relative;
    }

    .svgIcon {
        width: 12px;
        transition-duration: .3s;
    }

        .svgIcon path {
            fill: white;
        }

    .button_delete:hover {
        width: 140px;
        border-radius: 50px;
        transition-duration: .3s;
        background-color: rgb(255, 69, 69);
        align-items: center;
    }

        .button_delete:hover .svgIcon {
            width: 50px;
            transition-duration: .3s;
            transform: translateY(60%);
        }

    .button_delete::before {
        position: absolute;
        top: -20px;
        content: "Delete";
        color: white;
        transition-duration: .3s;
        font-size: 2px;
    }

    .button_delete:hover::before {
        font-size: 13px;
        opacity: 1;
        transform: translateY(30px);
        transition-duration: .3s;
    }

    .button_booking {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background-color: rgb(0, 0, 139);
        border: none;
        font-weight: 600;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.164);
        cursor: pointer;
        transition-duration: .3s;
        overflow: hidden;
        position: relative;
    }

    .svgIcon {
        width: 12px;
        transition-duration: .3s;
    }

        .svgIcon path {
            fill: white;
        }

    .button_booking:hover {
        width: 140px;
        border-radius: 50px;
        transition-duration: .3s;
        background-color: rgb(0, 0, 139);
        align-items: center;
    }

        .button_booking:hover .svgIcon {
            width: 50px;
            transition-duration: .3s;
            transform: translateY(60%);
        }

    .button_booking::before {
        position: absolute;
        top: -20px;
        content: "Booking";
        color: white;
        transition-duration: .3s;
        font-size: 2px;
    }

    .button_booking:hover::before {
        font-size: 13px;
        opacity: 1;
        transform: translateY(30px);
        transition-duration: .3s;
    }
</style>

<div id="div1">
    <h1 id="title">Danh sách yêu thích</h1>

    <div id="choice_sort" style="margin-bottom: 10px;">
        <label for="sortingOptions">Sắp xếp theo: </label>
        <select id="sortingOptions" onchange="GoIndex()">
            <option value="1">Người đặt nhiều nhất</option>
            <option value="2">Người đặt ít nhất</option>
        </select>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            GoIndex();
        });

        function GoIndex() {
        // Lấy giá trị của option được chọn
        var selectedValue = document.getElementById("sortingOptions").value;

        // Gọi AJAX để gửi yêu cầu đến hàm
        $.ajax({
            url: '@Url.Action("SortDSYT", "Liked")',
            type: 'POST',
            data: { value: selectedValue },
            success: function (data) {
                // Cập nhật lại phần tử HTML chứa danh sách phim
                $('#filmList').html(data);
            },
            error: function () {
                alert('Error.');
            }
            });
        }
    </script>

    <div id="div2">
        <div id="filmList" style="margin: 0px; padding: 0px;">
            @*Film List Here*@
        </div>
    </div>
</div>

